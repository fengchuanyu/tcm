/* pages/health/health.wxss */
.searchBar{
  width:680rpx;
  height:76rpx;
  border:1rpx solid #dddddd;
  margin:25rpx auto;
  border-radius: 10rpx;
  position:relative;
}
.searchContent{
  width: 500rpx;
  height:76rpx;
  margin:0 auto;
}
.searchImg{
  width: 60rpx;
  height:60rpx;
  position: absolute;
  top:50%;
  left:7rpx;
  transform:translateY(-50%);
  
}
.searchBtn{
  position: absolute;
  top:50%;
  right:20rpx;
  transform:translateY(-50%);
  color:#a59797d3;
  background-color: white;
  border:none;
  padding:0;
  line-height: 1.5;    
}
.content{
  margin-top:3rpx;
}
.article{
  padding:10rpx 30rpx;
  }
  .title{
    color:#fed5d5;
    margin-bottom:10rpx;
  }
  .writer,.label{
    display: inline-block;
    margin-right:25rpx;  
  }
  .detail{
    font-size: 28rpx;
  }
  .btn{
    color:#f7bcbc;
    display:inline-block;
  }




.article-main{
  overflow: hidden;
  border-bottom: 1rpx #f8f8f8 solid;
}
.article-main-title{
  color: #fed5d5;
}
.article-main-writer{
  font-size:30rpx;
  margin:10rpx 0;
}
.article-main-writer text{
  padding-right:40rpx;
}
.article-main-content{
  font-size:30rpx;
  padding:10rpx 0;

  text-overflow:ellipsis;
  -webkit-box-orient:vertical;
  -webkit-line-clamp:6;
}
.article-other{
  height: 40rpx;
  overflow: hidden;
  width: 100%;
  margin:10rpx 0;
  color:#7d7d7d;
}
.article-other view{
  margin-right:15rpx;
  font-size:30rpx;
  float:left;
}
.article-more{
  color:#fed5d5;
  font-size: 30rpx;
}
.article-main .article-visitnum{
  background-color: #ffeced;
  color:#fed5d5;
  font-size: 25rpx;
  padding:5rpx 10rpx;
  position:relative;
  padding-right:30rpx;
  box-sizing: border-box;
}
.article-visitnum image{
  height: 20rpx;
  width: 20rpx;
  position: absolute;
  display: block;
  right:5rpx;
}
.article-visitnum image:nth-child(3){
  top:20rpx;
}
.article-visitnum image:nth-child(2){
  top:5rpx;
}
.comment{
  height: 45rpx;
  width: 45rpx;
  float: left;
  display: block;
}
