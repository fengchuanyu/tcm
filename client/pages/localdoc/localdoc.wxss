/* pages/localdoc/localdoc.wxss */
.content{
  padding:30rpx;
}

.doctor{
  margin-top:20rpx;
}
.doctor-inf{
  margin:10rpx 30rpx;
  overflow: hidden;
  position: relative;
  border-bottom:1rpx solid #f8f8f8;
}
.doctor-inf image{
  height: 120rpx;
  width: 120rpx;
  border-radius: 10rpx;
}
.doctor-infname{
  float:left;
  height: 120rpx;
  font-size:35rpx;
  position:absolute;
  top:50%;
  left:160rpx;
  transform: translate(0%,-50%);
}
.infname{
  height: 120rpx;
  line-height: 120rpx;
}