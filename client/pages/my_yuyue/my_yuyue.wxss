/* pages/my_yuyue/my_yuyue.wxss */
.header{
  width: 500rpx;
  position: relative;
   left: 50%;
   right: 50%;
   transform: translateX(-50%);
   border: 1rpx #fed5d5 solid;
   overflow: hidden;
   margin: 20rpx
}
.tab{
  float: left; 
  width: 50%;
  text-align: center;
  padding: 10rpx 0; 
}
.topTabSwiper{
  
  zoom: 1;
}
.topTabSwiper:after{
  content: ""; 
  clear: both;
  display: block;
}
.tabBorer{
  color: white;
  background-color: #fed5d5;
}
.swiper{
  width: 100%;
}


.doctor-inf{
  padding:30rpx 30rpx 30rpx 30rpx;
  overflow: hidden;
  position: relative;
  border-bottom: 1rpx #f8f8f8 solid;
}
.doctor-inf image{
  height: 120rpx;
  width: 120rpx;
  /* overflow: hidden; */
  /* float:left; */
}
.doctor-infname{
  float:left;
  height: 120rpx;
  /* line-height: 150rpx; */
  position:absolute;
  top:45%;
  left:180rpx;
  transform: translate(0%,-50%);
}
.infname{
  height: 60rpx;
  line-height: 60rpx;
}
.infpost{
  height: 75rpx;
  line-height: 75rpx;
  font-size:30rpx;
}
.doctor-time_one,.doctor-time_two{
  position: absolute;
  right: 170rpx;
  font-size: 30rpx;
  top: 26%;
}
.doctor-time_two{
  top: 47%;
  right: 170rpx;
}
.btn{
  height: 70rpx;
  width: 120rpx;
  background: #fed5d5;
  color: white;
  font-size: 28rpx;
  text-align: center;
  position: absolute;
  top: 30%;
  right: 30rpx;
}