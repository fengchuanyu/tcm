<!--pages/my_yuyue/my_yuyue.wxml-->
<view class='topTabSwiper'>
  <view class='header'>
   <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}'  data-current = "0" bindtap='checkCurrent'>        未到时预约
  </view>
  <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}'  data-current = "1" bindtap='checkCurrent'>
    已过期预约
  </view>
  </view>
</view>
<swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
  <swiper-item>
   <view class='share-eg'>
       <view wx:for="{{doctorlist}}" wx:key="id" class="doctor-inf">
        <image src="../../image/{{item.img}}"></image>
        <view class='doctor-infname'>
          <view class="infname">{{item.name}}</view>
          <view class="infpost">{{item.post}}</view>
        </view>
        <view >
          <text class="doctor-time_one">2018-10-10</text>
          <text class='doctor-time_two'>上午</text>
        </view>
        <button class='btn'>取消</button>
      </view>
    </view>
  </swiper-item> 
  <swiper-item>
    <view class='share-eg'>
     <view wx:for="{{doctorlist}}" wx:key="id" class="doctor-inf">
        <image src="../../image/{{item.img}}"></image>
        <view class='doctor-infname'>
          <view class="infname">{{item.name}}</view>
          <view class="infpost">{{item.post}}</view>
        </view>
        <view >
          <text class="doctor-time_one">2018-10-10</text>
          <text class='doctor-time_two'>上午</text>
        </view>
        <button class='btn'>取消</button>
      </view>
    </view>
  </swiper-item>
</swiper>
